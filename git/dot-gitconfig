[user]
    name = "MarkTsai"
    email = marktsai0213@gmail.com

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    wk = worktree
    df = diff
    dc = diff --cached
    dc-name = diff --name-only --cached
    l1a = log --pretty=oneline --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    logp = log --date=iso --pretty='format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(white)%s %C(magenta) [%an]%Creset'
    logpn = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short --name-only

[include]
    path = .gitconfig.user
[core]
	editor = vim
